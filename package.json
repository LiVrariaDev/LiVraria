{
  "name": "LiVraria",
  "version": "1.0.0",
  "description": "図書のAI推薦システム",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "install:front": "pnpm install -C frontend",
    "dev:front": "pnpm -C frontend run dev",
    "install:back": "node scripts/setup-backend.js",
    "dev:back": "node scripts/run-backend.js",
    "setup": "concurrently \"pnpm:install:front\" \"pnpm:install:back\" --names \"SETUP-F,SETUP-B\" --prefix-colors \"cyan,magenta\"",
    "start": "concurrently \"pnpm:dev:front\" \"pnpm:dev:back\" --names \"FRONT,BACK\" --prefix-colors \"green,yellow\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LiVrariaDev/LiVraria.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LiVrariaDev/LiVraria/issues"
  },
  "homepage": "https://github.com/LiVrariaDev/LiVraria#readme",
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "esbuild",
      "protobufjs"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}